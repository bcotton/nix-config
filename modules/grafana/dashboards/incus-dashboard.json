      "targets": [
        {
          "expr": "incus:instance_memory_usage_ratio{instance=~\"$instance\", name=~\"$name\"}",
          "legendFormat": "{{ name }}"
        }
      ],
      "title": "Memory Usage by Instance",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "showPoints": "never"
          },
          "unit": "bytes"
