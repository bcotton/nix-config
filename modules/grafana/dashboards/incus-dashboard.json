      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 22,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "incus_memory_Active_bytes{instance=~\"$instance\", name=~\"$name\"}",
          "legendFormat": "{{ name }} active"
